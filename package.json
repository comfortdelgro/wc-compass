{
  "name": "wc-compass",
  "version": "0.0.0",
  "private": false,
  "repository": {
    "type": "git",
    "url": "https://github.com/comfortdelgro/wc-compass"
  },
  "license": "MIT",
  "author": "ComfortDelGro Corporation Limited (https://www.comfortdelgro.com/)",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "version": "changeset version && pnpm run format"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "prettier": "@comfortdelgro/prettier-config",
  "resolutions": {
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@comfortdelgro/prettier-config": "^1.0.2",
    "lint-staged": "^13.2.0",
    "prettier": "2.7.1",
    "simple-git-hooks": "2.8.1",
    "turbo": "1.5.6",
    "typescript": "4.8.4"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=14.0.0"
  }
}
